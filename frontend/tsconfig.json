{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6",
            "es2017"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "ESNext",
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["*"]
        }        
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}